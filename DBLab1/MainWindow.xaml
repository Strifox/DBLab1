        <TextBox x:Name="txtBoxAuthorBirthDate" Height="23" Margin="16,416,553,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="txtBoxAuthorGender" Height="22" Margin="16,468,553,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
