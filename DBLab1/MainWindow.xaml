        <Label x:Name="labeltxtBoxAuthorAge" Content="Author Age" HorizontalAlignment="Left" Margin="60,330,0,0" VerticalAlignment="Top" Width="84" HorizontalContentAlignment="Center" Height="25"/>
        <Label x:Name="labeltxtBoxAuthorBirthDate" Content="Author Birthdate" HorizontalAlignment="Left" Margin="52,389,0,0" VerticalAlignment="Top" Width="98" HorizontalContentAlignment="Center" Height="25"/>
        <Label x:Name="labeltextBoxAuthorGender" Content="Author Gender" HorizontalAlignment="Left" Margin="55,444,0,0" VerticalAlignment="Top" Width="90" HorizontalContentAlignment="Center" Height="27"/>
        <Label x:Name="labelAuthor" Content="Author" HorizontalAlignment="Left" Margin="78,27,0,0" VerticalAlignment="Top" Width="72" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
