        <TextBox x:Name="txtBoxAuthorName" Height="23" Margin="16,300,552.691,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalContentAlignment="Center" TextChanged="txtBoxAuthorName_TextChanged"/>
